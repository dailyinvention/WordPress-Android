<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e8e8e8"> 
    <ImageView android:id="@+id/home_logo"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/wordpress_home"
    android:paddingTop="40px" 
    android:gravity="center_horizontal"/> 
<view
class="com.roundhill.androidWP.customButton"
android:background="@android:color/transparent"
android:id="@+id/addFirstAccount"
            android:layout_width="240px" 
            android:layout_height="65px"
            android:textSize="22px"
            android:textColor="#006699"
            android:text="Add Account" 
            android:layout_gravity="center"
            android:layout_marginTop="20px"/>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e8e8e8"
    android:gravity="bottom|center"
    android:padding="4px">  
    <TextView android:id="@+id/blurb"
    android:gravity="center_horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textSize="12px"	
    android:text="Get a free account at WordPress.com"
    android:textColor="#006699"
    android:paddingTop="26px"
    android:paddingLeft="8px"/> 
</RelativeLayout>
</LinearLayout>
