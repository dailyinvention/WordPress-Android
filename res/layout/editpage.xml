<?xml version="1.0" encoding="utf-8"?>
<!-- Demonstrates using a relative layout to create a form -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e8e8e8"
    android:scrollbars="none">
    
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent" 
                android:layout_height="fill_parent"
				android:background="#e8e8e8"
                android:paddingLeft="10px"
                android:paddingRight="10px"
                android:paddingBottom="10px"> 
    <TextView android:id="@+id/l_title" 
              android:layout_width="fill_parent" 
              android:layout_height="wrap_content" 
              android:text="Post Title:"
              
                android:textColor="#444444"/>
              
    <EditText android:id="@+id/title" 
    		  android:minHeight="40px"
              android:layout_width="fill_parent" 
              android:layout_height="wrap_content" 
              android:background="@android:drawable/editbox_background"
              android:autoText="true"
              android:capitalize="sentences"
              android:layout_below="@id/l_title"/>
              
    <TextView android:id="@+id/l_content" 
              android:layout_width="fill_parent" 
              android:layout_height="wrap_content" 
              android:text="Post Content:"
              android:layout_below="@id/title"
              android:textColor="#444444"/>
              
    <EditText android:id="@+id/content"
    		  android:gravity="top" 
              android:layout_width="fill_parent" 
              android:layout_height="wrap_content" 
              android:background="@android:drawable/editbox_background"
              android:minLines="5"
              android:autoText="true"
              android:capitalize="sentences"
              android:layout_below="@id/l_content"/>
              
<view
class="org.wordpress.android.customButton"
			 android:id="@+id/bold" 
			android:textColor="#444444"
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content" 
            android:layout_below="@id/content"
            android:textStyle="bold"
            android:textSize="22px"
            android:text="B" /> 
            
<view
class="org.wordpress.android.customButton"
			android:id="@+id/em" 
			android:textColor="#444444" 
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content" 
            android:layout_alignTop="@id/bold"
            android:layout_toRightOf="@id/bold"
            android:textStyle="italic"
            android:textSize="22px"
            android:text="I" />
        
<view
class="org.wordpress.android.customButton"
			android:id="@+id/link"
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/em"
            android:layout_toRightOf="@id/em"
            android:textSize="22px"
            android:textColor="#006699"
            android:text="link" />  
            
<view
class="org.wordpress.android.customButton"
			android:id="@+id/bquote" 
			android:textColor="#444444" 
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/link"
            android:layout_toRightOf="@id/link"
            android:textSize="22px"
            android:text="b-quote" />          
              
    <TextView android:id="@+id/l_pictures" 
              android:layout_width="fill_parent" 
              android:layout_height="wrap_content"
              android:layout_below="@id/bold"
              android:text="Pictures:"
              android:textColor="#444444"/>
    
<view
class="org.wordpress.android.customButton"
			android:id="@+id/addPictureButton" 
			android:textColor="#444444" 
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"
            android:layout_below="@id/l_pictures" 
            android:text="Add"/>
            
<view
class="org.wordpress.android.customButton"
			android:id="@+id/clearPicture" 
			android:textColor="#444444" 
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/addPictureButton"
            android:layout_toRightOf="@id/addPictureButton"
            android:text="Clear" />
            
            <GridView   
            		android:id="@+id/gridView"   
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="fill_vertical"
                    android:numColumns="3"
                    android:layout_below="@id/addPictureButton">             
               </GridView>         
                         
  <TextView android:id="@+id/l_publish" 
			android:textColor="#444444" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_alignParentLeft="true"
              android:text="Publish? "
              android:layout_below="@id/gridView"/>          
                                     
    <CheckBox android:id="@+id/publish"
    android:button="@layout/btn_check"
     		android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:layout_below="@id/l_publish"
            /> 
    		  
<view
class="org.wordpress.android.customButton"
			android:id="@+id/post" 
			android:textColor="#444444" 
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content" 
            android:layout_below="@id/publish"
            android:layout_alignParentRight="true"
            android:text="Save" /> 
            
<view
class="org.wordpress.android.customButton"
			android:id="@+id/cancel" 
			android:textColor="#444444"
            android:layout_alignTop="@id/post"
            android:layout_toLeftOf="@id/post" 
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"
            android:text="Cancel" />           
            
    <TextView android:id="@+id/text1"
    		android:layout_width="fill_parent" 
              android:layout_height="wrap_content" 
              android:layout_below="@id/addPictureButton"/>
              

</RelativeLayout>
</ScrollView>