<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/settings"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none"
    android:background="#e8e8e8">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent" 
                android:layout_height="wrap_content"
                android:padding="10px"
				android:background="#e8e8e8">
              
      <TextView android:id="@+id/l_username"  
      android:textColor="#444444"
        	  android:layout_marginTop="10px"	
              android:layout_width="fill_parent" 
              android:layout_height="wrap_content" 
              android:text="Username:"
              android:layout_below="@id/url"/>
              
    <EditText android:id="@+id/username" 
              android:layout_width="fill_parent" 
              android:layout_height="wrap_content"
              android:minHeight="40px" 
              android:background="@android:drawable/editbox_background"
              android:layout_below="@id/l_username"/>           
  
      <TextView android:id="@+id/l_password"
      android:textColor="#444444"
              android:layout_marginTop="10px" 
              android:layout_width="fill_parent" 
              android:layout_height="wrap_content" 
              android:text="Password:"
              android:layout_below="@id/username"/>
              
    <EditText android:id="@+id/password" 
              android:layout_width="fill_parent" 
              android:layout_height="wrap_content"
              android:minHeight="40px" 
              android:password="true"
              android:background="@android:drawable/editbox_background"
              android:layout_below="@id/l_password"/>

      <TextView android:id="@+id/l_imagePlacement"
      android:textColor="#444444"
        		android:layout_marginTop="10px" 
              android:layout_width="fill_parent" 
              android:layout_height="wrap_content" 
              android:text="Place image:"
              android:layout_below="@id/password"/>
              
        <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:checkedButton="@+id/aboveText"
        android:id="@+id/imagePlacement"
        android:layout_below="@id/l_imagePlacement">
        <RadioButton
        android:button="@layout/radio_group"
        android:textColor="#444444"
            android:text="Above Text"
            android:id="@+id/aboveText"
            />
        <RadioButton
        android:button="@layout/radio_group"
        android:textColor="#444444"
            android:text="Below Text"
            android:id="@+id/belowText" />
    </RadioGroup>        
    
    <TextView android:id="@+id/l_maxImageWidth"
    android:textColor="#444444" 
              android:layout_width="fill_parent" 
              android:layout_height="wrap_content" 
              android:text="Maximum thumbnail pixel width:"
              android:layout_below="@id/imagePlacement"/>
              
     <Spinner android:id="@+id/maxImageWidth"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:textColor="#444444"
        android:background="@layout/spinner_selector"
   android:layout_below="@id/l_maxImageWidth"/>
   
        <TextView android:id="@+id/l_centerThumbnail" 
        android:textColor="#444444"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_alignParentLeft="true"
            android:paddingTop="13px"
              android:text="Align thumbnail to center?: "
              android:layout_below="@id/maxImageWidth"/>
              
<CheckBox android:id="@+id/centerThumbnail"
			android:button="@layout/btn_check"
     		android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/l_centerThumbnail"
            android:layout_toRightOf="@id/l_centerThumbnail"
            />
  
<view
class="org.wordpress.android.customButton"
			android:id="@+id/save"
			android:textColor="#444444"
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"
            android:layout_below="@id/centerThumbnail"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10px"
            android:text="Save" />
 
<view
class="org.wordpress.android.customButton"
android:textColor="#444444"
			android:id="@+id/cancel"
     		android:layout_width="wrap_content"  
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/save"
            android:layout_toLeftOf="@id/save"
            android:text="Cancel" />
 
</RelativeLayout>
</ScrollView>