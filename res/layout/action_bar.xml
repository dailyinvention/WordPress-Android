<?xml version="1.0" encoding="utf-8"?>
<org.wordpress.android.util.WPTitleBar
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/action_bar"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@android:color/transparent">
  <RelativeLayout
    android:id="@+id/actionBarWrapper"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/action_bar_height"
    android:gravity="left|top"
    android:background="#C9C9C9">
    <RelativeLayout
      android:id="@+id/blogSelector"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:gravity="center_vertical"
      android:background="@drawable/action_bar_btn_selector"
      android:layout_marginTop="1px"
      android:layout_marginRight="@dimen/action_bar_right_margin"
      android:padding="0dp">
      <ImageView
        android:layout_width="@dimen/action_bar_gravatar_size"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter"
        android:id="@+id/blavatar_img"
        android:src="@drawable/wp_logo_home"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="-1dp" />
      <TextView
        android:text="WordPress"
        android:id="@+id/blog_title"
        android:textColor="#FF212121"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:shadowColor="#FFFFFFFF"
        android:shadowDy="-2"
        android:shadowRadius="2"
        android:singleLine="True"
        android:textStyle="bold"
        android:textSize="@dimen/action_bar_title_text_size"
        android:layout_toRightOf="@id/blavatar_img"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="34dp"
        android:layout_marginTop="-1dp" />
      <ImageView
        android:layout_width="14dp"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter"
        android:id="@+id/drop_down_arrow"
        android:src="@drawable/drop_down_arrow"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="-1dp" />
    </RelativeLayout>
    <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="fill_parent">
      <ImageButton
        android:id="@+id/home_small"
        android:layout_width="@dimen/action_bar_height"
        android:layout_height="@dimen/action_bar_height"
        android:padding="@dimen/action_bar_button_padding"
        android:src="@drawable/icon_titlebar_home"
        android:layout_alignParentRight="true"
        android:layout_marginTop="1px"
        android:layout_marginRight="-1px"
        android:scaleType="fitCenter"
        android:background="@drawable/action_bar_btn_selector" />

      <FrameLayout
        android:layout_width="@dimen/action_bar_height"
        android:layout_height="@dimen/action_bar_height"
        android:layout_toLeftOf="@id/home_small"
        android:layout_marginTop="1px"
        android:layout_marginRight="1px">
        <Button
          android:id="@+id/action_refresh"
          android:layout_width="@dimen/action_bar_height"
          android:layout_height="@dimen/action_bar_height"
          android:padding="@dimen/action_bar_button_padding"
          android:scaleType="fitCenter"
          android:background="@drawable/action_bar_btn_selector" />
        <ImageView
          android:id="@+id/refresh_icon"
          android:src="@drawable/icon_titlebar_refresh"
          android:layout_width="@dimen/action_bar_height"
          android:layout_height="@dimen/action_bar_height"
          android:padding="@dimen/action_bar_button_padding"
          android:gravity="center"
          android:scaleType="fitCenter" />
      </FrameLayout>
    </RelativeLayout>
  </RelativeLayout>
  <ImageView
    android:id="@+id/shadow"
    android:layout_width="fill_parent"
    android:layout_height="5dp"
    android:src="@drawable/title_bar_shadow"
    android:scaleType="fitXY"
    android:background="@android:color/transparent"
    android:layout_marginTop="@dimen/action_bar_height" />
  <LinearLayout
    android:id="@+id/dashboard"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_below="@id/actionBarWrapper"
    android:gravity="center"
    android:layout_weight="1"
    android:visibility="gone"
    android:background="#00000000"
    android:clickable="true"
    android:paddingLeft="@dimen/dashboard_padding_small"
    android:paddingRight="@dimen/dashboard_padding_small"
    android:paddingTop="@dimen/dashboard_padding_large"
    android:paddingBottom="@dimen/dashboard_padding_large">
    <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:orientation="vertical"
      android:background="@drawable/dashboard_bg"
      android:layout_margin="20dp"
      android:weightSum="4.0">
      <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.0"
        android:layout_weight="1.0"
        android:orientation="horizontal">
        <LinearLayout
          android:id="@+id/dashboard_newpost_btn"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_weight=".50"
          android:orientation="vertical"
          android:clickable="true"
          android:background="@drawable/wp_button_dashboard_top_left"
          android:gravity="center"
          android:padding="10dp">
          <ImageView
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/dashboard_icon_new_post"
            android:scaleType="centerInside" />
          <TextView
            android:id="@+id/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DashboardButtonText"
            android:text="@string/new_post" />
        </LinearLayout>
        <LinearLayout
          android:id="@+id/dashboard_newpage_btn"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_weight=".50"
          android:orientation="vertical"
          android:clickable="true"
          android:background="@drawable/wp_button_dashboard_top_right"
          android:gravity="center"
          android:layout_marginLeft="2px"
          android:padding="10dp">
          <ImageView
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/dashboard_icon_new_page"
            android:scaleType="centerInside" />
          <TextView
            android:id="@+id/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DashboardButtonText"
            android:text="@string/new_page" />
        </LinearLayout>
      </LinearLayout>
      <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:weightSum="1.0"
        android:orientation="horizontal">
        <LinearLayout
          android:id="@+id/dashboard_quickphoto_btn"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_weight=".50"
          android:layout_marginTop="1px"
          android:orientation="vertical"
          android:clickable="true"
          android:background="@drawable/wp_button_dashboard"
          android:gravity="center"
          android:padding="10dp">
          <ImageView
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/dashboard_icon_photo"
            android:scaleType="centerInside" />
          <TextView
            android:id="@+id/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DashboardButtonText"
            android:text="@string/quick_photo" />
        </LinearLayout>
        <LinearLayout
          android:id="@+id/dashboard_quickvideo_btn"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_weight=".50"
          android:orientation="vertical"
          android:clickable="true"
          android:background="@drawable/wp_button_dashboard"
          android:gravity="center"
          android:layout_marginLeft="2px"
          android:layout_marginTop="1px"
          android:padding="10dp">
          <ImageView
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/dashboard_icon_video"
            android:scaleType="centerInside" />
          <TextView
            android:id="@+id/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DashboardButtonText"
            android:text="@string/quick_video" />
        </LinearLayout>
      </LinearLayout>
      <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.0"
        android:orientation="vertical">
        <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:weightSum="3.0"
          android:layout_weight="1.0"
          android:layout_marginTop="4px"
          android:orientation="horizontal">
          <LinearLayout
            android:id="@+id/dashboard_posts_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:clickable="true"
            android:background="@drawable/wp_button_dashboard"
            android:gravity="center"
            android:padding="10dp">
            <ImageView
              android:layout_width="48dp"
              android:layout_height="48dp"
              android:src="@drawable/dashboard_icon_posts"
              android:scaleType="centerInside" />
            <TextView
              android:id="@+id/button_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              style="@style/DashboardButtonText"
              android:text="@string/tab_posts" />
          </LinearLayout>
          <LinearLayout
            android:id="@+id/dashboard_pages_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:clickable="true"
            android:background="@drawable/wp_button_dashboard"
            android:gravity="center"
            android:layout_marginLeft="2px"
            android:padding="10dp">
            <ImageView
              android:layout_width="48dp"
              android:layout_height="48dp"
              android:src="@drawable/dashboard_icon_pages"
              android:scaleType="centerInside" />
            <TextView
              android:id="@+id/button_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              style="@style/DashboardButtonText"
              android:text="@string/tab_pages" />
          </LinearLayout>
          <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2px"
            android:layout_weight="1.0"
            android:padding="0dp">
            <LinearLayout
              android:id="@+id/dashboard_comments_btn"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:clickable="true"
              android:background="@drawable/wp_button_dashboard"
              android:gravity="center"
              android:padding="10dp">
              <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/dashboard_icon_comments"
                android:scaleType="centerInside" />
              <TextView
                android:id="@+id/button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/DashboardButtonText"
                android:text="@string/tab_comments" />
            </LinearLayout>
            <org.wordpress.android.util.CommentBadgeTextView
              android:id="@+id/comment_badge"
              android:layout_width="46dp"
              android:layout_height="46dp"
              android:gravity="center_horizontal"
              android:text="0"
              android:layout_gravity="right"
              android:textStyle="bold"
              android:textSize="12dp"
              android:shadowDy="1"
              android:shadowRadius="1"
              android:shadowColor="#FF464646"
              android:textColor="#FFFFFFFF"
              android:background="@drawable/comment_badge" />
          </FrameLayout>
        </LinearLayout>
        <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:weightSum="3.0"
          android:layout_weight="1.0"
          android:layout_marginTop="1px"
          android:orientation="horizontal">
          <LinearLayout
            android:id="@+id/dashboard_settings_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:clickable="true"
            android:background="@drawable/wp_button_dashboard_bottom_left"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1.0">
            <ImageView
              android:layout_width="48dp"
              android:layout_height="48dp"
              android:src="@drawable/dashboard_icon_settings"
              android:scaleType="centerInside" />
            <TextView
              android:id="@+id/button_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              style="@style/DashboardButtonText"
              android:text="@string/settings" />
          </LinearLayout>
          <LinearLayout
            android:id="@+id/dashboard_subs_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:clickable="true"
            android:background="@drawable/wp_button_dashboard_bottom_center"
            android:gravity="center"
            android:layout_marginLeft="2px"
            android:padding="10dp"
            android:layout_weight="1.0">
            <ImageView
              android:layout_width="48dp"
              android:layout_height="48dp"
              android:src="@drawable/dashboard_icon_subs"
              android:scaleType="centerInside" />
            <TextView
              android:id="@+id/button_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              style="@style/DashboardButtonText"
              android:text="@string/reader" />
          </LinearLayout>
          <LinearLayout
            android:id="@+id/dashboard_stats_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:clickable="true"
            android:background="@drawable/wp_button_dashboard_bottom_right"
            android:gravity="center"
            android:layout_marginLeft="2px"
            android:padding="10dp"
            android:layout_weight="1.0">
            <ImageView
              android:layout_width="48dp"
              android:layout_height="48dp"
              android:src="@drawable/dashboard_icon_stats"
              android:scaleType="centerInside" />
            <TextView
              android:id="@+id/button_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              style="@style/DashboardButtonText"
              android:text="@string/tab_stats" />
          </LinearLayout>
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
</org.wordpress.android.util.WPTitleBar>