<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/menu_posts_btn"
            style="@style/MenuDrawer.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/menu_image_size"
                android:layout_height="@dimen/menu_image_size"
                android:contentDescription="@string/posts"
                android:scaleType="centerInside"
                android:src="@drawable/dashboard_icon_posts" />

            <TextView
                style="@style/MenuDrawer.Button.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/posts" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_pages_btn"
            style="@style/MenuDrawer.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/menu_image_size"
                android:layout_height="@dimen/menu_image_size"
                android:contentDescription="@string/pages"
                android:scaleType="centerInside"
                android:src="@drawable/dashboard_icon_pages" />

            <TextView
                style="@style/MenuDrawer.Button.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pages" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_comments_btn"
            style="@style/MenuDrawer.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/menu_image_size"
                android:layout_height="@dimen/menu_image_size"
                android:contentDescription="@string/tab_comments"
                android:scaleType="centerInside"
                android:src="@drawable/dashboard_icon_comments" />

            <TextView
                style="@style/MenuDrawer.Button.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_comments" />

            <TextView
                android:id="@+id/comment_badge"
                style="@style/MenuDrawer.CommentBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_quickphoto_btn"
            style="@style/MenuDrawer.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/menu_image_size"
                android:layout_height="@dimen/menu_image_size"
                android:contentDescription="@string/quick_photo"
                android:scaleType="centerInside"
                android:src="@drawable/dashboard_icon_wp" />

            <TextView
                style="@style/MenuDrawer.Button.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quick_photo" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_quickvideo_btn"
            style="@style/MenuDrawer.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/menu_image_size"
                android:layout_height="@dimen/menu_image_size"
                android:contentDescription="@string/quick_video"
                android:scaleType="centerInside"
                android:src="@drawable/dashboard_icon_wp" />

            <TextView
                style="@style/MenuDrawer.Button.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quick_video" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_stats_btn"
            style="@style/MenuDrawer.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/menu_image_size"
                android:layout_height="@dimen/menu_image_size"
                android:contentDescription="@string/tab_stats"
                android:scaleType="centerInside"
                android:src="@drawable/dashboard_icon_stats" />

            <TextView
                style="@style/MenuDrawer.Button.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_stats" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_dashboard_btn"
            style="@style/MenuDrawer.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/menu_image_size"
                android:layout_height="@dimen/menu_image_size"
                android:contentDescription="@string/wp_admin"
                android:scaleType="centerInside"
                android:src="@drawable/dashboard_icon_wp" />

            <TextView
                style="@style/MenuDrawer.Button.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wp_admin" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_settings_btn"
            style="@style/MenuDrawer.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/menu_image_size"
                android:layout_height="@dimen/menu_image_size"
                android:contentDescription="@string/settings"
                android:scaleType="centerInside"
                android:src="@drawable/dashboard_icon_wp" />

            <TextView
                style="@style/MenuDrawer.Button.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_reader_btn"
            style="@style/MenuDrawer.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/menu_image_size"
                android:layout_height="@dimen/menu_image_size"
                android:contentDescription="@string/reader"
                android:scaleType="centerInside"
                android:src="@drawable/dashboard_icon_wp" />

            <TextView
                style="@style/MenuDrawer.Button.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reader" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>